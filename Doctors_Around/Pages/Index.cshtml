@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center"> 
    <b>
        <h1 class="display-4">Welcome To Doctors Around The Platform Where You Can Reach Doctors In Your Area From The Comfort Of Your Home</h1>
    </b>
</div>


<div class="alert alert-primary alert-dismissible fade show" style="background-color:rgba(0, 255, 255,0.2)" role="alert">
    <p class="mb-0 text-dark">Advice : @Model.advice</p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>