@page
@model Doctors_Around.Pages.User.DoctorModel
@{
    ViewData["Title"] = Model.doc.Full_Name;
}

    <div class="row border rounded m-3 p-3" style="background-color: rgba(255, 255, 255,0.2)">
        <div class="col-2 justify-content-center align-content-center">
            @if (Model.doc.accountType == Core.AccountType.Clinic)
            {
                <i class="fas fa-clinic-medical fa-9x"></i>
            }
            else if (Model.doc.accountType == Core.AccountType.Doctor)
            {
                <i class="fas fa-user-md fa-9x"></i>
            }
            else
            {
                <i class="fas fa-hospital fa-9x"></i>
            }
        </div>
        <div class="col-10">
            <h2>Name : @Model.doc.Full_Name</h2>
            <h3>Country : @Model.doc.Country</h3>
            <h3>City : @Model.doc.City</h3>
            <h3>Adress : @Model.doc.Full_Adress</h3>
            <p>Phone Number : @Model.doc.Phone_number</p>
        </div>
    </div>
    <div class="row" >
        <table class="table" style="background-color: rgba(255, 255, 255,0.2)">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Symptoms</th>
                    <th scope="col">Medicins</th>
                    <th scope="col">Previous Illnesses</th>
                    <th scope="col">Response</th>
                </tr>
            </thead>
            @foreach (Core.Case c in Model.doc.RequestedCases)
            {
        <tr>
            <th><p>
    @c.Patient_Name
</p>
            </th>
            <th>
                <p>
                    @foreach (string symp in c.Symptoms)
                    {
                        @symp <small>,</small>
                    }
                </p>
            </th>
            <th>
                <p>
                    @foreach (string med in c.Medicins)
                    {
                        @med <small>,</small>
                    }
                </p>
            </th>
            <th>
                <p>
                    @foreach (string ill in c.PreviousIllnesses)
                    {
                        @ill <small>,</small>
                    }
                </p>
            </th>
            <th class="ml-1">
                <form >
                    <div class="form-group form-inline">
                        <input placeholder="respone .." />
                        <a class="btn" href="#"><i class="fas fa-paper-plane"></i></a>
                    </div>
                </form>
            </th>
        </tr>
            }
        </table>
    </div>