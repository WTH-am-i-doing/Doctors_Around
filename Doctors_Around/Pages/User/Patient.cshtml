@page
@model Doctors_Around.Pages.User.PatientModel
@{
    ViewData["Title"] = "Patient";
}

<div class="container">
    <div class="text-center">
        <h2>Full Name : @Model.user.Full_Name</h2>
        <h3>Email : @Model.user.Email</h3>
        <h3>Phone Number : @Model.user.Phone_number</h3>
    </div>
    <div class="row text-center border rounded p-3">
        <div class="col-sm">
            <h2>Symptoms</h2>
            <ul class="list-group mb-1">
                @foreach(string symp in Model.user.Symptoms)
                {
                    <li class="list-group-item p-2 text-center"> 
                        <i class="fas fa-head-side-cough"></i>
                        @symp
                    </li>
                }
            </ul>
            <a class="btn btn-secondary" href="#">Add Symptom</a>
        </div>
        <div class="col-sm">
            <h2>Medicins</h2>
            <ul class="list-group mb-1">
                @foreach (string medic in Model.user.Medicins)
                {
                    <li class="list-group-item p-2 text-center"><i class="fas fa-pills"></i> @medic</li>
                }
            </ul>
            <a class="btn btn-secondary" href="#">Add Medicin</a>
        </div>
        <div class="col-sm">
            <h2>Previous Illnesses</h2>
            <ul class="list-group mb-1">
                @foreach (string illn in Model.user.PreviousIllnesses)
                {
                    <li class="list-group-item p-3 text-center">@illn</li>
                }
            </ul>
            <a class="btn btn-secondary" href="#">Add Illness</a>
        </div>
    </div>
</div>
