@page
@model Doctors_Around.Pages.User.RegisterDocModel
@{
    ViewData["Title"] = "Register Doctor / Hospital / Clinic";
}

<section class="container-fluid">
    <section class="row justify-content-center">
        <section class="col-10 col-sm-12 col-md-8">
            <form class="form-container-custom" >
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="xyz@domain.com">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Password</label>
                        <input type="password" class="form-control" id="inputPassword4">
                    </div>
                </div>
                <!--name-->
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label for="inputAddress">Full Name</label>
                        <input type="text" class="form-control" id="inputAddress">
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="inputAddress">Specialty</label>
                        <input type="text" class="form-control" id="inputAddress">
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="inputState">Status</label>
                        <select id="inputState" class="form-control">
                            <option>Doctor</option>
                            <option>Hospital</option>
                            <option>Clinic</option>
                        </select>
                    </div>
                </div>
                <!--address-->
                <div class="form-row ">
                    <div class="form-group col-11">
                        <label for="inputAddress2">Address</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="1234 Main ST">
                    </div>
                    <div class="form-group col-1 border-bottom-0">
                        <a href="#" class="btn btn-success align-bottom"><i class="fas fa-map-marked-alt"></i></a>
                    </div>
                </div>
                <!--city-->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCity">Country</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCity">City</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </section>
    </section>
</section>


